<div class="container">
    <!-- product -->
    <div class="product-content product-wrap clearfix product-deatil">
        <div class="row">
            <div class="col-md-5 col-sm-12 col-xs-12">
                <div class="product-image">
                    <div id="myCarousel-2" class="carousel slide">
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel-2" data-slide-to="0" class=""></li>
                            <li data-target="#myCarousel-2" data-slide-to="1" class="active"></li>
                            <li data-target="#myCarousel-2" data-slide-to="2" class=""></li>
                        </ol>
                        <div class="carousel-inner">
                            <!-- Slide 1 -->
                            <div class="item active">
                                <img src={{productDetail.imagePath.firstPic}} class="img-responsive" style="display: block;margin-left: auto;margin-right: auto;" alt="" />
                            </div>
                            <!-- Slide 2 -->
                            <div class="item">
                                <img src={{productDetail.imagePath.secondPic}} style="display: block;margin-left: auto;margin-right: auto;" class="img-responsive"
                                    alt="" />
                            </div>
                            <!-- Slide 3 -->
                            <div class="item">
                                <img src={{productDetail.imagePath.thirdPic}} style="display: block;margin-left: auto;margin-right: auto;" class="img-responsive"
                                    alt="" />
                            </div>
                        </div>
                        <a class="left carousel-control" href="#myCarousel-2" data-slide="prev"> <span
                                class="glyphicon glyphicon-chevron-left"></span> </a>
                        <a class="right carousel-control" href="#myCarousel-2" data-slide="next"> <span
                                class="glyphicon glyphicon-chevron-right"></span> </a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-md-offset-1 col-sm-12 col-xs-12">
                <h2 class="name">
                    {{productDetail.title}}
                    <i class="fa fa-star fa-2x text-primary"></i>
                    <i class="fa fa-star fa-2x text-primary"></i>
                    <i class="fa fa-star fa-2x text-primary"></i>
                    <i class="fa fa-star fa-2x text-primary"></i>
                    <i class="fa fa-star fa-2x text-muted"></i>
                    <span class="fa fa-2x">
                        <h5>{{productDetail.totalRate}} đánh giá</h5>
                    </span>
                    {{!-- <a href="javascript:void(0);">{{productDetail.totalRate}} đánh giá</a> --}}
                </h2>
                <hr />
                <h3 class="price-container">
                    {{productDetail.price}} VND
                </h3>
                <div class="certified">
                    <ul>
                        <li>
                            <a href="javascript:void(0);">Delivery time<span>7 Working Days</span></a>
                        </li>
                        <li>
                            <a href="javascript:void(0);">Certified<span>Quality Assured</span></a>
                        </li>

                    </ul>
                </div>
                <hr />
                <div class="description description-tabs">
                    <ul id="myTab" class="nav nav-pills">
                        <li class="active"><a href="#more-information" data-toggle="tab" class="no-margin">Mô tả sản
                                phẩm </a></li>
                        <li class=""><a href="#specifications" data-toggle="tab">Thông số sản phẩm</a></li>
                        <li class=""><a href="#reviews" data-toggle="tab">Bình luận</a></li>
                    </ul>
                    <div id="myTabContent" class="tab-content">
                        <div class="tab-pane fade active in" id="more-information">
                            <br />
                            <strong>Mô tả</strong>
                            <p>
                                {{productDetail.description}}
                            </p>
                        </div>
                        <div class="tab-pane fade" id="specifications">
                            <br />
                            <dl class="">
                                <dt>Màn hình </dt>
                                <dd>{{productDetail.detail.screen}}</dd>

                                <br />

                                <dt>Camera Selfie</dt>
                                <dd>{{productDetail.detail.CameraSelfie}}</dd>
                                <br />

                                <dt>Ram</dt>
                                <dd>{{productDetail.detail.Ram}}</dd>
                                <br />

                                <dt>Bộ nhớ</dt>
                                <dd>{{productDetail.detail.Memory}} GB</dd>
                                <br />

                                <dt>Dung lượng pin</dt>
                                <dd>{{productDetail.detail.Battery}} mAh</dd>
                                <br />

                                <dt>Hệ điều hành</dt>
                                <dd>{{productDetail.detail.System}}</dd>

                            </dl>
                        </div>
                        <div class="tab-pane fade" id="reviews">
                            <br />
                            <form method="post" action = 'comment' class="well padding-bottom-10" >
                                <textarea rows="2" class="form-control" name = 'comment' placeholder="Viết bình luận"></textarea>
                                <div class="margin-top-10">
                                    <input type="submit" class="btn btn-sm btn-primary pull-right">
                                       
                                    </input>
                                    <a href="javascript:void(0);" class="btn btn-link profile-link-btn" rel="tooltip"
                                        data-placement="bottom" title="" data-original-title="Add Location"><i
                                            class="fa fa-location-arrow"></i></a>
                                    <a href="javascript:void(0);" class="btn btn-link profile-link-btn" rel="tooltip"
                                        data-placement="bottom" title="" data-original-title="Add Voice"><i
                                            class="fa fa-microphone"></i></a>
                                    <a href="javascript:void(0);" class="btn btn-link profile-link-btn" rel="tooltip"
                                        data-placement="bottom" title="" data-original-title="Add Photo"><i
                                            class="fa fa-camera"></i></a>
                                    <a href="javascript:void(0);" class="btn btn-link profile-link-btn" rel="tooltip"
                                        data-placement="bottom" title="" data-original-title="Add File"><i
                                            class="fa fa-file"></i></a>
                                </div>
                            </form>

                            <div class="chat-body no-padding profile-message">
                                <ul>
                            {{# each productDetail.comment }}    
                                    <li class="message">
                                        <img src="https://bootdey.com/img/Content/avatar/avatar1.png" class="online" />
                                        <span class="message-text">
                                            <a href="javascript:void(0);" class="username">
                                                {{this.username}}
                                                {{!-- <span class="badge">Purchase Verified</span> --}}
                                                <span class="pull-right">
                                                    <i class="fa fa-star fa-2x text-primary"></i>
                                                    <i class="fa fa-star fa-2x text-primary"></i>
                                                    <i class="fa fa-star fa-2x text-primary"></i>
                                                    <i class="fa fa-star fa-2x text-primary"></i>
                                                    <i class="fa fa-star fa-2x text-muted"></i>
                                                </span>
                                            </a>
                                          <p> {{this.detail}} </p>
                                        </span>
                                        <ul class="list-inline font-xs">
                                            <li>
                                           
                                            </li>
                                            <li class="pull-right">
                                                <small class="text-muted pull-right ultra-light"> {{this.datediff}}
                                                </small>
                                            </li>
                                        </ul>
                                    </li>
                            {{/each}}  
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <a href="/add-to-cart/{{productDetail.title}}" class="btn btn-success btn-lg">Add to cart</a>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="btn-group pull-right">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end product -->
</div>