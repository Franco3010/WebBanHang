<div class="container mt-5">
  <div class="row tm-content-row">

      <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 tm-block-col">
      <form method="post" action="/deleteSelectedOrder">

        <div class="tm-bg-primary-dark tm-block tm-block-products">
          <div class="tm-product-table-container">
           <div style="color:white"> Total : {{order.length}} </div>
            <table class="table table-hover tm-table-small tm-product-table">
              <thead>
                <tr>
                  <th scope="col">&nbsp;</th>

                  <th scope="col"> RECEIVER</th>
                  <th scope="col"> ADDRESS</th>
                  <th scope="col">STATUS</th>
                  <th scope="col">TOTAL PRICE</th>
                  <th scope="col">ARRIVE DATE</th>


                  <th scope="col">&nbsp;</th>
                </tr>
              </thead>
              <tbody>
                {{# each order }}
                <tr>
                  <th scope="row"><input type="checkbox" value="{{this._id}}" name="checkbox" /></th>
      
                  <td>{{this.name}}</td>

                  <td class="tm-product-name">{{this.address}}</td>
                  <td>{{this.status}}</td>
                  <td>{{this.cart.totalprice }} VND</td>
                  <td>{{this.arriveDate }} </td>




                  <td>
                    <a href="/deleteOrder/?id={{this._id}}" onclick="return confirm('Are you sure you want to delete this item?');" class="tm-product-delete-link">
                      <i class="far fa-trash-alt tm-product-delete-icon"></i>
                    </a>
               
                        <a href="/orderDetail/?id={{this._id}}" class="tm-product-delete-link">
                      <i class="fa fa-info-circle tm-product-delete-icon"></i>
                    </a>
                  </td>
                </tr>
                {{/each}}





              </tbody>
            </table>
          </div>
          <!-- table container -->

          <button type="submit" onclick="return confirm('Are you sure you want to delete this item?');" class="btn btn-primary btn-block text-uppercase mb-3">Delete selected order</button>

        </div>
      </form>
      </div>
    
  </div>
</div>