<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>


<div class="slider" style="margin-top: 60px; ">
    <div class="owl-carousel owl-one owl-theme">
        <div class="item" style="border-radius:10px">
            <div class="slider-img" style="border-radius:10px">
                <img src="/banner(1).png" alt="" style="border-radius:10px">
            </div>
          
        </div>
        <div class="item" style="border-radius:10px">
            <div class="slider-img" style="border-radius:10px"><img src="/banner(2).png" alt="" style="border-radius:10px"></div>
       
        </div>
        <div class="item" style="border-radius:10px">
            <div class="slider-img" style="border-radius:10px"><img src="/banner(3).png" alt="" style="border-radius:10px"></div>
      
        </div>
    </div>
</div>



<h1>Sản phẩm bán chạy</h1>
{{# each products }}


<div class="col-sm-6 col-md-3">
    <div class="thumbnail">
        <img src={{ this.imagePath.firstPic }} alt="..." class="img-responsive">
        <div class="caption">
            <h3>{{ this.title }}</h3>
            {{!-- <p class="description">{{ this.description }}</p> --}}
            <div class="clearfix">
                <div class="price pull-left">{{ this.price }} VND</div>
                <a href="/productDetail/{{this.title}}" class="btn btn-success pull-right" role="button">Mua hàng</a>
            </div>
        </div>
    </div>
</div>


{{/each}}
