<div class="container mt-5">
  <div class="row tm-content-row">

      <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 tm-block-col">
      <form method="post" action="/deleteSelectedUser">

        <div class="tm-bg-primary-dark tm-block tm-block-products">
          <div class="tm-product-table-container">
            <table class="table table-hover tm-table-small tm-product-table">
              <thead>
                <tr>
                  <th scope="col">&nbsp;</th>

                  <th scope="col"> USERNAME</th>
                  <th scope="col"> SURNAME</th>
                  <th scope="col">NAME</th>
                  <th scope="col">PHONE NUMBER</th>
                  <th scope="col">ADDRESS</th>

                  



                  <th scope="col">&nbsp;</th>
                </tr>
              </thead>
              <tbody>
                {{# each user }}
                <tr>
                  <th scope="row"><input type="checkbox" value="{{this._id}}" name="checkbox" /></th>
                  <td>{{this.username}}</td>

                  <td class="tm-product-name">{{this.surname}}</td>
                  <td>{{this.name}}</td>
                  <td>{{this.phoneNumber}} </td>
                  <td>{{this.address}} </td>


                  <td>
                    <a href="/deleteUser/?id={{this._id}}" onclick="return confirm('Are you sure you want to delete this item?');" class="tm-product-delete-link">
                      <i class="far fa-trash-alt tm-product-delete-icon"></i>
                    </a>
                      <a href="/updateUser/?id={{this._id}}" class="tm-product-delete-link">
                      <i class="far fa-edit tm-product-delete-icon"></i>
                    </a>
                  </td>
                </tr>
                {{/each}}





              </tbody>
            </table>
          </div>
          <!-- table container -->

          <button type="submit" onclick="return confirm('Are you sure you want to delete this item?');" class="btn btn-primary btn-block text-uppercase mb-3">Delete selected user</button>

        </div>
      </form>
      </div>
    
  </div>
</div>