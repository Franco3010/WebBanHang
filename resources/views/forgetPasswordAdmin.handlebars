
    {{#if hasErrors}}
            <div class="alert alert-danger">
                {{# each messages }}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}

<div class="container">
	<div class="d-flex justify-content-center h-100">
		<div class="card">
			<div class="card-header">
				<h3>Admin Forget Password</h3>
			
			</div>
			<div class="card-body">
				<form method="post" action="/forgetPasswordAdmin">
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-user"></i></span>
						</div>
						<input type="text" class="form-control" placeholder="username" name="email">
						
					</div>
					
				
					<div class="form-group">
						<input type="submit" value="Submit" class="btn float-right login_btn">
					</div>
				</form>
			</div>
			<div class="card-footer">
				<div class="d-flex justify-content-center links">
					Don't have an account?<a href="http://localhost:3000/registerAdmin">Register</a>
				</div>
				<div class="d-flex justify-content-center">
					<a href="http://localhost:3000/loginAdmin">Back to login page</a>
				</div>
			</div>
		</div>
	</div>
</div>



