    <div class="container tm-mt-big tm-mb-big">
      <div class="row">
        <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
          <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
            <div class="row">
              <div class="col-12">
                <h2 class="tm-block-title d-inline-block">Add Product</h2>
              </div>
            </div>
            <div class="row tm-edit-product-row">
              <div class="col-xl-6 col-lg-6 col-md-12">
                {{# each product }}
                <form action="" enctype="multipart/form-data" method="POST" class="tm-edit-product-form">
                  <div class="form-group mb-3">
                    <label
                      for="name"
                      >Product Name
                    </label>
                    <input
                      id="name"
                      name="title"
                      type="text"
                      class="form-control validate"
                      value="{{this.title}}"
                      required
                    />
                  </div>
                  <div class="form-group mb-3">
                    <label
                      for="name"
                      >Screen
                    </label>
                    <input
                      id="name"
                      name="screen"
                      type="text"
                      class="form-control validate"
                      value="{{this.productDetail.screen}}"
                      required
                    />
                  </div>
                  <div class="form-group mb-3">
                    <label
                      for="name"
                      >CameraSelfie
                    </label>
                    <input
                      id="name"
                      name="CameraSelfie"
                      type="text"
                      class="form-control validate"
                      value="{{this.productDetail.CameraSelfie}}"
                      required
                    />
                  </div>
             
                  <div class="form-group mb-3">
                    <label
                      for="name"
                      >Ram
                    </label>
                    <input
                      id="name"
                      name="ram"
                      type="text"
                      class="form-control validate"
                      value="{{this.productDetail.Ram}}"
                      required
                    />
                  </div>
                  <div class="form-group mb-3">
                    <label
                      for="name"
                      >Battery
                    </label>
                    <input
                      id="name"
                      name="battery"
                      type="number"
                      class="form-control validate"
                      value="{{this.productDetail.Battery}}"
                      required
                    />
                  </div>
                  <div class="form-group mb-3">
                    <label
                      for="name"
                      >System
                    </label>
                    <input
                      id="system"
                      name="system"
                      type="text"
                      class="form-control validate"
                      value="{{this.productDetail.System}}"
                      required
                    />
                  </div>
                  <div class="form-group mb-3">
                    <label
                      for="description"
                      >Description</label
                    >
                    <textarea
                      class="form-control validate"
                      rows="3"
                      name = "description"
                      value="{{this.description}}"
                      required
                    >{{this.description}}</textarea>
                  </div>
                 
                  <div class="row">
                      <div class="form-group mb-3 col-xs-12 col-sm-6">
                          <label
                            for="expire_date"
                            >Price
                          </label>
                          <input
                            id="expire_date"
                            name="price"
                            type="number"
                            class="form-control validate"
                            data-large-mode="true"
                            value="{{this.price}}"
                          />
                        </div>
                    
                  </div>
                  
              </div>
              <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
             
                <div class="tm-product-img-dummy mx-auto">
                  <i
                    class="fas fa-cloud-upload-alt tm-upload-icon"
                    onclick="document.getElementById('fileInput').click();"
                  ></i>
                </div>
                <div class="custom-file mt-3 mb-3">
                  <input id="fileInput" type="file" style="display:none;" name="myFiles" multiple/>
                  <input
                    name="myFiles"
                    type="button"
                    class="btn btn-primary btn-block mx-auto"
                    value="UPLOAD PRODUCT IMAGE"
                    onclick="document.getElementById('fileInput').click();"
                  />
                </div>
                
              </div>
              <div class="col-12">
                <button type="submit" class="btn btn-primary btn-block text-uppercase">Edit Product Now</button>
              </div>
            </form>
            {{/each}}

            </div>
          </div>
        </div>
      </div>
    </div>